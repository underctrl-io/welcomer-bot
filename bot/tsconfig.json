{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "declaration": false,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", ".commandkit"]
}
